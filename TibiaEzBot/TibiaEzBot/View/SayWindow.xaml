<Window x:Class="TibiaEzBot.View.SayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    Title="Say Waypoint" Height="143" Width="387" Topmost="True" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid Height="101">
        <TextBox Margin="56,9,0,0" Name="uxWordsTextBox" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="294" />
        <Label HorizontalAlignment="Left" Margin="8,9,0,35" Name="label1" Width="120">Words:
        </Label>
        <Label HorizontalAlignment="Left" Margin="8,35,0,8" Name="label2" Width="62">Type:
        </Label>
        <ComboBox SelectedIndex="0" Margin="56,35,156,0" Name="uxSayTypeComboBox" Height="24" VerticalAlignment="Top">
            <ComboBoxItem Tag="1">Say</ComboBoxItem>
            <ComboBoxItem Tag="2">Whisper</ComboBoxItem>
            <ComboBoxItem Tag="3">Yell</ComboBoxItem>
            <ComboBoxItem Tag="4">NPC</ComboBoxItem>
        </ComboBox>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,15,8" Name="uxAddButton" VerticalAlignment="Bottom" Width="75" Click="uxAddButton_Click">Add</Button>
    </Grid>
</Window>
