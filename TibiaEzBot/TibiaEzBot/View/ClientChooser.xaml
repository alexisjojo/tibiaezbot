<Window x:Class="TibiaEzBot.View.ClientChooser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Choose a client." Height="102" Width="372" ShowInTaskbar="False" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Topmost="True" Loaded="Window_Loaded">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="White" Offset="0"></GradientStop>
            <GradientStop Color="DarkGray" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Height="32" Width="314">
        <ComboBox Margin="5,4,0,0" Name="uxClients" ToolTip="Press F5 to reload." TabIndex="0" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="222" PreviewKeyDown="uxClients_PreviewKeyDown" />
        <Button HorizontalAlignment="Left" Margin="233,4,0,0" Name="uxChoose" Width="75" IsDefault="True" Height="24" VerticalAlignment="Top" Click="uxChoose_Click">Choose</Button>
    </Grid>
</Window>
